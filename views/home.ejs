<%- include("partials/header"); -%>

<h1>Home</h1>
<p> <%= homeStartingContent %> </p>

<% posts.forEach(function(post){ %>
    <h1> <%= post.title %> </h1>
    <% const contentLengthMax = 20 %>
    <% if(post.content.length > contentLengthMax){ %>
        <p>
            <%= post.content.substring(0,contentLengthMax) + " ..." %>
            <a href="/posts/<%= post.title %>">Read More</a>
        </p>
    <% } else { %>
        <p> <%= post.content %> </p>
    <% } %>
<% }) %>

<%- include("partials/footer"); -%>